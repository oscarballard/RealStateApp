@using RealStateApp.Core.Application.ViewModels.Properties;
@model List<PropertyViewModel>;
<style>
    a {
        text-decoration: none;
        color: white;
    }

        a:hover {
            text-decoration: none;
            color: white;
        }
</style>


<div class="row">
    <div class="col-sm-8"><h1>Lista de tipos de propiedades</h1></div>
    <div class="col-sm-4"><a class="btn btn-success" asp-controller="Properties" asp-action="Create">Agregar</a></div>

    @if (Model != null)
    {
        @foreach (var Propiedad in Model)
        {
            <div class="col-md-3">
                <div class="card" style="width: 18rem;">
                    @*<img src="..." class="card-img-top" alt="...">*@
                    <div id="carouselExampleIndicators" class="carousel slide card-img-top" data-ride="carousel">
                        <ol class="carousel-indicators">
                            @if (Propiedad.Imagen1 != null)
                            {
                                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            }
                            @if (Propiedad.Imagen2 != null)
                            {
                                <li data-target="#carouselExampleIndicators" data-slide-to="1" class="active"></li>
                            }
                            @if (Propiedad.Imagen3 != null)
                            {
                                <li data-target="#carouselExampleIndicators" data-slide-to="2" class="active"></li>
                            }
                            @if (Propiedad.Imagen4 != null)
                            {
                                <li data-target="#carouselExampleIndicators" data-slide-to="3" class="active"></li>
                            }
                        </ol>
                        <div class="carousel-inner">
                            @if (Propiedad.Imagen1 != null)
                            {
                                <div class="carousel-item active">
                                    <img src="@Propiedad.Imagen1" class="d-block w-100" alt="...">
                                </div>
                            }
                            @if (Propiedad.Imagen2 != null)
                            {
                                <div class="carousel-item ">
                                    <img src="@Propiedad.Imagen2" class="d-block w-100" alt="...">
                                </div>
                            }
                            @if (Propiedad.Imagen3 != null)
                            {
                                <div class="carousel-item ">
                                    <img src="@Propiedad.Imagen3" class="d-block w-100" alt="...">
                                </div>
                            }
                            @if (Propiedad.Imagen4 != null)
                            {
                                <div class="carousel-item ">
                                    <img src="@Propiedad.Imagen4" class="d-block w-100" alt="...">
                                </div>
                            }
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <div class="card-body">
                        <p class="card-text mb-0"> <label class="font-weight-bold">Codigo: </label> @Propiedad.Codigo</p>
                        <p class="card-text mb-0"> <label class="font-weight-bold">Propiedad: </label> @Propiedad.TipoPropiedad.Nombre</p>
                        <p class="card-text mb-0"> @Propiedad.TipoVenta.Nombre</p>
                        <p class="card-text mb-0 font-weight-bold text-danger">$RD @Propiedad.Precio</p>
                    </div>
                    <div class="card-footer" style="display: flex; justify-content: space-around;">
                        <div class="d-flex align-items-center">
                            <span class="mr-2">
                                <i class="fa-solid fa-bath"></i>
                            </span>
                            <div>
                                <h6 class="m-0"><strong>@Propiedad.CantLavabos</strong></h6>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <span class="mr-2">
                                <i class="fa-solid fa-bed"></i>
                            </span>
                            <div>
                                <h6 class="m-0"><strong>@Propiedad.CantHabitaciones</strong></h6>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <span class="mr-2">
                                <i class="fa-solid fa-people-roof"></i>
                            </span>
                            <div>
                                <h6 class="m-0"><strong>@Propiedad.Terreno M²</strong></h6>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer" style="display: flex; justify-content: space-around;">
                        <div class="d-flex align-items-center">
                            <a class="btn btn-warning" asp-controller="Properties" asp-action="Edit" asp-route-Id="@Propiedad.Id">
                                <i class="fa-solid fa-pencil text-white"></i>
                            </a>
                        </div>
                        <div class="d-flex align-items-center">
                            <a class="btn btn-danger">
                                <i class="fa-solid fa-trash text-white"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
