@using RealStateApp.Core.Application.ViewModels.Properties;
@model PropertyViewModel;
<div class="row">
    <div class="col-md-9">
        <div id="carouselExampleIndicators" class="carousel slide card-img-top" data-ride="carousel">
            <ol class="carousel-indicators">
                @if (Model.Imagen1 != null)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                }
                @if (Model.Imagen2 != null)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="1" class="active"></li>
                }
                @if (Model.Imagen3 != null)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="2" class="active"></li>
                }
                @if (Model.Imagen4 != null)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="3" class="active"></li>
                }
            </ol>
            <div class="carousel-inner">
                @if (Model.Imagen1 != null)
                {
                    <div class="carousel-item active">
                        <img src="@Model.Imagen1" class="d-block w-100" style="height: 450px;" alt="...">
                    </div>
                }
                @if (Model.Imagen2 != null)
                {
                    <div class="carousel-item ">
                        <img src="@Model.Imagen2" class="d-block w-100" style="height: 450px;" alt="...">
                    </div>
                }
                @if (Model.Imagen3 != null)
                {
                    <div class="carousel-item ">
                        <img src="@Model.Imagen3" class="d-block w-100" style="height: 450px;" alt="...">
                    </div>
                }
                @if (Model.Imagen4 != null)
                {
                    <div class="carousel-item ">
                        <img src="@Model.Imagen4" class="d-block w-100" style="height: 450px;" alt="...">
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <p class="card-text mb-0"> <label class="font-weight-bold">Codigo: </label> @Model.Codigo</p>
        <p class="card-text mb-0">@Model.TipoPropiedad.Nombre</p>
        <hr />
        <p class="card-text mb-0">@Model.TipoVenta.Nombre</p>
        <p class="card-text mb-0 text-danger font-weight-bold">$@Model.Precio RD</p>
        <hr />
        <div style="display: flex; justify-content: space-around;">
            <div class="d-flex align-items-center">
                <span class="stamp stamp-md mr-3">
                    <i class="fa-solid fa-bath"></i>
                </span>
                <div>
                    <h4 class="m-0"><strong>@Model.CantHabitaciones Habitacion(es)</strong></h4>
                </div>
            </div>
            <div class="d-flex align-items-center">
                <span class="stamp stamp-md mr-3">
                    <i class="fa-solid fa-bed"></i>
                </span>
                <div>
                    <h4 class="m-0"><strong>@Model.CantLavabos Baño(s)</strong></h4>
                </div>
            </div>
            <div class="d-flex align-items-center">
                <span class="stamp stamp-md mr-3">
                    <i class="fa-solid fa-people-roof"></i>
                </span>
                <div>
                    <h4 class="m-0"><strong>@Model.Terreno M²</strong></h4>
                </div>
            </div>
        </div>
        <hr />
        <p class="card-text mb-0"> <label class="font-weight-bold">Descripcion</label></p>
        <p class="card-text mb-0"> @Model.Descripcion</p>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <p class="card-text mb-0"> <label class="font-weight-bold">Mejoras</label></p>
            </div>
                @foreach (var mejora in Model.Mejoras)
                {
                    <div class="col-md-2">
                        <span class="badge badge-secondary" style="display: flex; align-items: center;">
                            <i class="fa-solid fa-circle-check"></i>
                            <h4 class="m-0"><strong>@mejora.Nombre</strong></h4>
                        </span>
                    </div>
                }
            </div>
        </div>
    <div class="col-md-3">
        <div class="card" style="width: 18rem;display: flex;align-items: center;">
            <img src="/Images/Properties/1/b2471bd5-bc7c-48bb-8d23-d9e11800130c.PNG" class="card-img-top" alt="Agente" style="width: 100px; border-radius: 100%;">
            <div class="card-body">
                <p class="card-text mb-0"> <label class="font-weight-bold">@Model.Usuario.FirstName @Model.Usuario.LastName </label> </p>
                <p class="card-text mb-0"> <label class="font-weight-bold">Email: @Model.Usuario.Email</label> </p>
                <p class="card-text mb-0"> <label class="font-weight-bold">Telefono: @Model.Usuario.Phone</label> </p>
            </div>
        </div>
    </div>
</div>
